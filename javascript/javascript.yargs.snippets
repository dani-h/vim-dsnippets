snippet yargs "yargs"
const yargs = require('yargs');
const argv = yargs
  .option('file', {
    alias: 'f',
    demandOption: true,
    default: '/etc/passwd',
    describe: 'x marks the spot',
    type: 'boolean|string|number|array',
    choices: ['xs', 's', 'm', 'l', 'xl']
  })
  .argv;
endsnippet
